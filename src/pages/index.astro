---
import Layout from "../layouts/Layout.astro";
import "iconify-icon";
---

<Layout title="home | polaroid">
  <main class="flex justify-center items-start h-10 relative mt-[14rem]">
    <div class="flex absolute top-0 left-1/2 -translate-x-1/2 gap-0">
      <button
        class="w-14 h-[9.5rem] bg-red-500 rounded-b-full rounded-tl-full duration-150 hover:h-[10rem] active:h-[9.5rem]"
      ></button>
      <button
        class="w-14 h-[9.5rem] bg-orange-500 rounded-b-full duration-150 hover:h-[10rem] active:h-[9.5rem]"
      ></button>
      <button
        class="w-14 h-[9.5rem] bg-yellow-500 rounded-b-full duration-150 hover:h-[10rem] active:h-[9.5rem]"
      ></button>
      <button
        class="w-14 h-[9.5rem] bg-green-500 rounded-b-full duration-150 hover:h-[10rem] active:h-[9.5rem]"
      ></button>
      <button
        class="w-14 h-[9.5rem] bg-blue-500 rounded-b-full rounded-tr-full duration-150 hover:h-[10rem] active:h-[9.5rem]"
      ></button>
    </div>

    <h1 class="mt-6 font-jakarta font-black text-[2.5rem] py-3 px-8 rounded-full border[4px] border-white/40 backdrop-blur-xl bg-white/30 shadow-xl z-10 duration-500 relative space-x-6 animate-in slidein-from-top-[12rem] ease-out">
      polaroid
